<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="006_1744_add_comic_selections_table.xml" author="mcpierce">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="ComicSelections"/>
            </not>
        </preConditions>

        <createTable tableName="ComicSelections">
            <column name="Id"
                    type="bigint">
                <constraints nullable="false"
                             unique="true"
                             primaryKey="true"/>
            </column>

            <column name="ComicBookId" type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="ComiXedUserId" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addAutoIncrement tableName="ComicSelections"
                          columnName="Id"
                          columnDataType="bigint"/>

        <addForeignKeyConstraint baseTableName="ComicSelections" baseColumnNames="ComiXedUserId"
                                 constraintName="ComicSelectionsUserFk"
                                 referencedTableName="ComiXedUsers"
                                 referencedColumnNames="Id"/>

        <addForeignKeyConstraint baseTableName="ComicSelections" baseColumnNames="ComicBookId"
                                 constraintName="ComicSelectionsComicBookFk"
                                 referencedTableName="ComicBooks"
                                 referencedColumnNames="Id"/>

        <addUniqueConstraint tableName="ComicSelections" constraintName="ComicSelectionsUniqComicAndUser"
                             columnNames="ComicBookId,ComiXedUserId"/>

        <createIndex tableName="ComicSelections" indexName="ComicSelectionsComicBookIdx">
            <column name="ComicBookId"/>
        </createIndex>

        <createIndex tableName="ComicSelections" indexName="ComicSelectionsUserIdx">
            <column name="ComiXedUserId"/>
        </createIndex>

    </changeSet>
</databaseChangeLog>

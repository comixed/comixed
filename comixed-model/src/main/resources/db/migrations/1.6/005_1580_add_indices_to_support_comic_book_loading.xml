<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="005_1580_add_indices_to_support_comic_book_loading.xml" author="mcpierce">

        <preConditions onFail="MARK_RAN">
            <indexExists tableName="ComicDetails" indexName="ComicDetailsArchiveTypeIdx"/>
            <indexExists tableName="ComicDetails" indexName="ComicDetailsIssueNumberIdx"/>
            <indexExists tableName="ComicDetails" indexName="ComicDetailsCoverDateIdx"/>
            <indexExists tableName="ComicDetails" indexName="ComicDetailComicTypeIdx"/>
            <indexExists tableName="ComicDetails" indexName="ComicDetailsAddedDateIdx"/>
            <not>
                <indexExists tableName="ComicDetails" indexName="ComicDetailsPublisherIdx"/>
                <indexExists tableName="ComicDetails" indexName="ComicDetailsComicStateIdx"/>
                <indexExists tableName="ComicDetails" indexName="ComicDetailsSeriesIdx"/>
                <indexExists tableName="ComicDetails" indexName="ComicDetailsVolumeIdx"/>
                <indexExists tableName="ComicMetadataSources" indexName="ComicMetadataSourcesComicBookId"/>
            </not>
        </preConditions>

        <dropIndex tableName="ComicDetails" indexName="ComicDetailsArchiveTypeIdx"/>
        <createIndex tableName="ComicDetails" indexName="ComicDetailsArchiveTypeIdx">
            <column name="ArchiveType"/>
        </createIndex>

        <createIndex tableName="ComicDetails" indexName="ComicDetailsPublisherIdx">
            <column name="Publisher"/>
        </createIndex>

        <createIndex tableName="ComicDetails" indexName="ComicDetailsSeriesIdx">
            <column name="Series"/>
        </createIndex>

        <createIndex tableName="ComicDetails" indexName="ComicDetailsVolumeIdx">
            <column name="Volume"/>
        </createIndex>

        <dropIndex tableName="ComicDetails" indexName="ComicDetailsIssueNumberIdx"/>
        <createIndex tableName="ComicDetails" indexName="ComicDetailsIssueNumberIdx">
            <column name="IssueNumber"/>
        </createIndex>

        <dropIndex tableName="ComicDetails" indexName="ComicDetailsCoverDateIdx"/>
        <createIndex tableName="ComicDetails" indexName="ComicDetailsCoverDateIdx">
            <column name="CoverDate"/>
        </createIndex>

        <dropIndex tableName="ComicDetails" indexName="ComicDetailComicTypeIdx"/>
        <createIndex tableName="ComicDetails" indexName="ComicDetailsComicTypeIdx">
            <column name="ComicType"/>
        </createIndex>

        <dropIndex tableName="ComicDetails" indexName="ComicDetailsAddedDateIdx"/>
        <createIndex tableName="ComicDetails" indexName="ComicDetailsAddedDateIdx">
            <column name="AddedDate"/>
        </createIndex>

        <createIndex tableName="ComicDetails" indexName="ComicDetailsComicStateIdx">
            <column name="ComicState"/>
        </createIndex>

    </changeSet>
</databaseChangeLog>

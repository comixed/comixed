<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
  <changeSet id="002_1929_added_batch_comic_groups.xml" author="mcpierce">

    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="comic_batches"/>
        <tableExists tableName="comic_batch_entries"/>
      </not>
    </preConditions>
    <comment>Check for existing batch comic grouping</comment>

    <createTable tableName="comic_batches">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true"/>
      </column>

      <column name="batch_name" type="varchar(64)">
        <constraints nullable="false" unique="true"/>
      </column>

      <column name="completed" type="bool">
        <constraints nullable="false"/>
      </column>

      <column name="created_on" type="datetime">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <createIndex tableName="comic_batches" indexName="comic_batches_batch_name_idx">
      <column name="batch_name"/>
    </createIndex>

    <createTable tableName="comic_batch_entries">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true"/>
      </column>

      <column name="comic_batch_id" type="bigint">
        <constraints nullable="false" unique="false"/>
      </column>

      <column name="comic_book_id" type="bigint">
        <constraints nullable="false" unique="false"/>
      </column>
    </createTable>

    <createIndex tableName="comic_batch_entries" indexName="comic_batch_entries_batch_and_book_idx">
      <column name="comic_batch_id"/>
      <column name="comic_book_id"/>
    </createIndex>

    <addForeignKeyConstraint baseTableName="comic_batch_entries" baseColumnNames="comic_batch_id"
                             constraintName="comic_batch_entries_comic_batch_fk"
                             referencedTableName="comic_batches"
                             referencedColumnNames="id"/>

    <addForeignKeyConstraint baseTableName="comic_batch_entries" baseColumnNames="comic_book_id"
                             constraintName="comic_batch_entries_comic_book_fk"
                             referencedTableName="comic_books"
                             referencedColumnNames="id"/>

    <dropIndex tableName="comic_books" indexName="comic_book_create_metadata_source_idx"/>
    <dropColumn tableName="comic_books" columnName="create_metadata_source"/>
    <dropColumn tableName="comic_books" columnName="blocked_pages_marked"/>

  </changeSet>
</databaseChangeLog>

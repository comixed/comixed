<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="005_2541_fix_library_plugin_foreign_key-1" author="mcpierce">

        <preConditions onFail="MARK_RAN">
            <foreignKeyConstraintExists foreignKeyName="library_plugin_property_plugin_fk"/>
        </preConditions>

        <dropForeignKeyConstraint baseTableName="library_plugin_properties"
                                  constraintName="library_plugin_property_plugin_fk"/>

        <addForeignKeyConstraint baseTableName="library_plugin_properties" baseColumnNames="library_plugin_id"
                                 constraintName="library_plugin_properties_v3_library_plugin_fk"
                                 referencedTableName="library_plugins"
                                 referencedColumnNames="library_plugin_id"/>

    </changeSet>
</databaseChangeLog>

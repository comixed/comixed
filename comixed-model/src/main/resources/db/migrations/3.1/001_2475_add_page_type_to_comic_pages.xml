<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="001_2475_add_page_type_to_comic_pages.xml" author="mcpierce">

        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="comic_pages" columnName="page_type"/>
            </not>
        </preConditions>

        <addColumn tableName="comic_pages">
            <column name="page_type" type="varchar(32)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <sql>UPDATE comic_pages
             SET page_type = 'FRONT_COVER'
             WHERE page_number in (0, 1);</sql>

        <sql>UPDATE comic_pages
             SET page_type = 'STORY'
             WHERE page_type IS NULL;</sql>

        <addNotNullConstraint tableName="comic_pages" columnName="page_type" columnDataType="varchar(32)"/>

    </changeSet>
</databaseChangeLog>

<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="002_2476_remove_comic_pages_page_state.xml" author="mcpierce">

        <preConditions onFail="MARK_RAN">
            <columnExists tableName="comic_pages" columnName="page_state"/>
        </preConditions>

        <sql>UPDATE comic_pages
             SET page_type = 'DELETED'
             WHERE page_state = 'DELETED';</sql>

        <dropIndex tableName="comic_pages" indexName="comic_page_page_state_idx"/>

        <dropColumn tableName="comic_pages" columnName="page_state"/>

    </changeSet>
</databaseChangeLog>
